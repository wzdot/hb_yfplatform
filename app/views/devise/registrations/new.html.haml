%h2
  = t( "app.devise.sign_up" )

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  .inputs
    = f.input :email, :label => t( "app.devise.email" ), :required => true, :autofocus => true
    = f.input :password, :label => t( "app.devise.password" ), :required => true
    = f.input :password_confirmation, :label => t( "app.devise.password_confirmation" ), :required => true
  .actions
    = f.button :submit, t( "app.devise.sign_up" )

= render "links"

