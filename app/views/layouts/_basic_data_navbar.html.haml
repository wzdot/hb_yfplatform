.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
          
      = link_to t( "app.Yfplatform" ), "/", :class => "brand"
      .nav-collapse
        = render 'layouts/basic_data_navmenu'
        %ul.nav.navbar-text.pull-right 
          - if user_signed_in?
            %li
              =# t( "app.logined" ) + ":"
            %li
              = link_to current_user.email, "#" # user_path( current_user )
          %li.btn-group
            %a.btn-small.dropdown-toggle( data-toggle = "dropdown" href = "#" )
              = t( "app.language" )
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to "简体中文", url_for( :locale => "zh-CN" )
              %li
                = link_to "English", url_for( :locale => "en" )
          - if user_signed_in?
            %li
              = link_to t( "app.logout" ), sign_out_path
